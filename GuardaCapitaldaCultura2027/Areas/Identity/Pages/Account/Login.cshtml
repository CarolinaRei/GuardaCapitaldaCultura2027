@page
@model LoginModel

@{
    ViewData["Title"] = "Login";
}

<h1>@ViewData["Title"]</h1>
<div class="alert alert-light text-lg-center" role="alert">
    <h4>Por favor, utilize a sua conta Turista para fazer Login.</h4>
</div>
<hr />

<div class="col-md-6 text-left">
    <fieldset class="border p-4" list-inline-item">
        <form id="account" method="post">
            <div asp-validation-summary="All" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Input.Email"></label>
                <input asp-for="Input.Email" class="form-control" />
                <span asp-validation-for="Input.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Input.Password"></label>
                <input asp-for="Input.Password" class="form-control" />
                <span asp-validation-for="Input.Password" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label asp-for="Input.RememberMe">
                        <input asp-for="Input.RememberMe" />
                        @Html.DisplayNameFor(m => m.Input.RememberMe)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <button type="submit" class="btn btn-primary"> Login </button>
            </div>
            <div class="form-group">
                <p>
                    <a id="forgot-password" asp-page="./ForgotPassword"> Esqueci-me da Password </a>
                </p>
                <p>
                    <a asp-area="Identity" asp-page="/Account/Registar"> Registar como Turista </a>
                </p>
            </div>
        </form>
    </fieldset>


        @section Scripts {
            <partial name="_ValidationScriptsPartial" />
        }
