@model GuardaCapitaldaCultura2027.Models.Evento

@{ ViewData["Title"] = "Edit"; }

<form enctype="multipart/form-data" asp-action="Edit">
    <div class="col-md-6 text-left">
        <fieldset class="border p-4 list-inline-item">
            <legend class="w-auto text-left">Eventos - Edit</legend>
            <div class="row">
                <div class="col-md-6" style="max-width:100% !important; flex:auto;">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="EventoId" />
                    <input type="hidden" asp-for="MunicipioId" />
                    <div class="form-group">
                        <label asp-for="Name" class="control-label"></label>
                        <input asp-for="Name" class="form-control" />
                        <span asp-validation-for="Name" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Descricao" class="control-label"></label>
                        <input asp-for="Descricao" class="form-control" />
                        <span asp-validation-for="Descricao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Data_realizacao" class="control-label"></label>
                        <input asp-for="Data_realizacao" class="form-control" />
                        <span asp-validation-for="Data_realizacao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Imagem" class="control-label"></label>
                        <input type="file" name="Imagem" asp-for="Imagem" style="min-width:fit-content;height:fit-content;" class="form-control" />
                        <span asp-validation-for="Imagem" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Lotacao_max" class="control-label"></label>
                        <input asp-for="Lotacao_max" class="form-control" />
                        <span asp-validation-for="Lotacao_max" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            <center>
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-secondary">Back to List</a> |
                    <input type="submit" value="Save" class="btn btn-success" />
                </div>
            </center>
        </fieldset>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
