                <p class="card-text">@Html.DisplayNameFor(model => model.Data_realizacao)</p>
                <p class="card-text">@Html.DisplayFor(modelItem => item.Lotacao_max)</p>
                <div class="form-group">
                    <input type="submit" value="Reservar" class="btn btn-primary" />

                </div>
            </div>
        </div>
    </div>
</div>
}
