@model IEnumerable<GuardaCapitaldaCultura2027.Models.Muicipio>

@{
    ViewData["Title"] = "Index";
}


<p>
    <a asp-action="Create">Create New</a>
</p>



<div class="alert alert-danger alert-dismissible fade show" role="alert">
    <a asp-controller="Home" asp-action="Covid">
        <strong>COVID-19!</strong> O QUE PRECISA SABER
        CONTEM CONNOSCO. NÓS, CONTAMOS COM TODOS!
    </a>
    <button type="button" class="close" data-dismiss="alert" aria-label="Close">
        <span aria-hidden="true">&times;</span>
    </button>
</div>
<div class="m-5"></div>

<div class="row">

    @foreach (var item in Model)
    {

        <div class="col-md-4 mb-5 ">
            <div class="zoom card h-100">
                <a asp-controller="Eventos" asp-action="Index">
                    <img class="card-img-top" src="~/img/Aguiar-da-Beira-Largo-Monumentos.jpg" alt="Município de Aguiar da Beira" height="200">
                    <div class="overlay2">@Html.DisplayFor(modelItem => item.Nome)</div>
                </a>

            </div>
        </div>


    }

</div>


