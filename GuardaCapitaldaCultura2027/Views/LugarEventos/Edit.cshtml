@model GuardaCapitaldaCultura2027.Models.LugarEvento
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;


@{ViewData["Title"] = "Editar";}

<form enctype="multipart/form-data" asp-action="Edit">
    <div class="col-md-6 text-left">
        <fieldset class="border p-4 list-inline-item">
            <legend class="w-auto text-left"> Editar Lugar </legend>
            <div class="row">
                <div class="col-md-6" style="max-width:100% !important; flex:auto;">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="LugarEventoId" />
                    <div class="form-group form-check">
                        <label class="form-check-label">
                            <input class="form-check-input" asp-for="Ocupado" /> @Html.DisplayNameFor(model => model.Ocupado)
                        </label>
                    </div>
                    <div class="form-group">
                        <label asp-for="NumeroCadeira" class="control-label"></label>
                        <input asp-for="NumeroCadeira" class="form-control" />
                        <span asp-validation-for="NumeroCadeira" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <input type="submit" value="Editar" class="btn btn-primary" />
                    </div>
                </div>
            </div>
            <br />
            <center>
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-secondary">Voltar à lista</a> |
                    <input type="submit" value="Guardar" class="btn btn-success" />
                </div>
            </center>
        </fieldset>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
