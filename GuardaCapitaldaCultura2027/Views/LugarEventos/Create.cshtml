@model GuardaCapitaldaCultura2027.Models.LugarEvento
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;

@{ViewData["Title"] = "Criar";}

<h4 class="alert-light"> Criar novo Lugar </h4>
<hr />

<div class="col-md-6 text-left">
    <fieldset class="border p-4 list-inline-item">
        <legend class="w-auto text-center font-weight-bold">Formulário de Restrições COVID</legend>
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="Ocupado" /> @Html.DisplayNameFor(model => model.Ocupado)
                </label>
            </div>
            <div class="form-group">
                <label asp-for="NumeroCadeira" class="control-label"></label>
                <input asp-for="NumeroCadeira" class="form-control" />
                <span asp-validation-for="NumeroCadeira" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Criar" class="btn btn-primary" />
            </div>
        </form>
    </fieldset>
</div>

<div>
    <a asp-action="Index" class="btn btn-secondary">Voltar à lista</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
