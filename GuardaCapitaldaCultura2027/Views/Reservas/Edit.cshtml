@model GuardaCapitaldaCultura2027.Models.Reserva
@using Microsoft.AspNetCore.Mvc.Localization;
@inject IViewLocalizer Localizer;

@{ ViewData["Title"] = "Edit";}

<h4 class="alert-light">Editar Reservas</h4>
<hr />

<form enctype="multipart/form-data" asp-action="Edit">
    <div class="col-md-6 text-left">
        <fieldset class="border p-4 list-inline-item">
            <legend class="w-auto text-left">Formulario das Reservas</legend>
            <div class="row">
                <div class="col-md-6" style="max-width:100% !important; flex:auto;">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                    <input type="hidden" asp-for="ReservaId" />
                    <input type="hidden" asp-for="EventoId" />
                    <input type="hidden" asp-for="PessoaId" />
                    <div class="form-group">
                        <label asp-for="Nome" class="control-label"></label>
                        <input asp-for="Nome" class="form-control" />
                        <span asp-validation-for="Nome" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Observacao" class="control-label"></label>
                        <input asp-for="Observacao" class="form-control" />
                        <span asp-validation-for="Observacao" class="text-danger"></span>
                    </div>
                    <div class="form-group">
                        <label asp-for="Numero_Reserva" class="control-label"></label>
                        <input asp-for="Numero_Reserva" class="form-control" />
                        <span asp-validation-for="Numero_Reserva" class="text-danger"></span>
                    </div>
                </div>
            </div>
            <br />
            <a asp-action="Index" class="btn btn-light float-left">Voltar à Lista</a>
            <input type="submit" value="save" class="btn btn-primary float-right" />
        </fieldset>
    </div>
</form>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
